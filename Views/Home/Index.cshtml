
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navigation Bar -->
<nav class="topnav" id="myTopnav">
    <a href="#home">Home</a>
    <a href="../Home/Store">Store</a>
    <a href="#gallary">Gallery</a>
    <a href="../Home/Services">Services</a>
    <a href="../Home/AboutUs">About Us</a>
    <a href="../Home/ContactUs">Contact us</a>
    <a href="javascript:void(0);" class="icon" onclick="myFunction()"><i class="fa fa-bars"></i></a>
</nav>

<!-- Corousel Section -->
<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/CorouselImage/1.png" />
        </div>

        <div class="carousel-item">
            <img src="~/img/CorouselImage/2.png" />
        </div>
        <div class="carousel-item">
            <img src="~/img/CorouselImage/3.png" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<!-- Home Section -->

<section id="home">
    <img src="~/img/home.png" alt="home">
    <div id="button" align="center">
        <a id="shopbtn" href="../Home/Store" target="_blank" rel="nofollow noopener">Shop Now</a>
    </div>
</section>

<!-- Gallery Section -->

<section id="gallary">

    <div class="mainheading">
        <h1>What We Offer</h1>
    </div>

    <div id="cards">
        <div id="box1" class="boxcustom">
            <img src="~/img/products/cupcake1.png" alt="cupcake">

            <h2 class="subheading">Cupcakes</h2>

            <p>We provide a variety of cupcakes and themed cupcakes specially made with high-quality natural ingredients.</p>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>

        <div id="box2" class="boxcustom">
            <img src="~/img/products/cake2.png" alt="cake">

            <h2 class="subheading">Cakes</h2>

            <p>
                Nothing tastes better than a chocolate cake with a variety of flavors, which is always available at
                our bakery.
            </p>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>

        <div id="box3" class="boxcustom">
            <img src="~/img/products/wed_cake.png" alt="wedding cake">

            <h2 class="subheading"> Wedding Cake</h2>

            <p>
                Want to make your wedding unforgettable? Then you need to order a unique wedding cake at Sweet Shop !
            </p>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>

        <div id="box4" class="boxcustom">
            <img src="~/img/products/donuts.png" alt="donuts">

            <h2 class="subheading">Donuts</h2>

            <p>
                The best surprise gift for children are Donuts.So what you think, just buy !. We provide
                fresh and best Donuts.
            </p>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>

        <div id="box5" class="boxcustom">
            <img src="~/img/products/customized.png" alt="customized cake">

            <h2 class="subheading">Customized Cakes</h2>

            <P>Celebrate your every special days with our special customized event cakes. We provide customized cakes as your imagination. Now it's time to order dream cake !</P>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>

        <div id="box6" class="boxcustom">
            <img src="~/img/products/brownies.png" alt="brownies">

            <h2 class="subheading">Brownies</h2>

            <p>After every dinner enjoy your sweet with our Sweet Shop Desserts.</p>

            <a class="readmore" href="../Home/Store" target="_blank" rel="nofollow noopener">View More</a>
        </div>
    </div>

    <div id="buttonOrder" align="center">
        <a id="order" href="../Home/Store" target="_blank" rel="nofollow noopener">Order Now</a>
    </div>
    <div class="border-line">
        <h1> <br> </h1> <hr>
    </div>
</section>

<!-- Review Section -->
<section id="review">
    <img src="~/img/review.png" alt="review">
    <div class="border-line">
        <h1> <br> <br> <br> </h1> <hr>
    </div>
</section>